<div class="card">
  <ul class="list-group list-group-flush">
  <li class="list-group-item"><strong>Id:</strong> <%= @order.id %></li>
  <li class="list-group-item"><strong>User:</strong> <%= @order.user_id %></li>
  <li class="list-group-item"><strong>Discount:</strong> <%= @order.discount %></li>
  <li class="list-group-item"><strong>Etat paiement:</strong> <%= @order.is_paid %></li>
  <li class="list-group-item"><strong>Etat commande:</strong> <%= @order.is_ready %></li>
  </ul>
  <div class="card-body">
  <%= link_to 'Modifier', edit_order_path(@order), class:"btn btn-dark" %>  
  <%= link_to 'Retour', orders_path, class:"btn btn-light" %>
  </div>
</div>