<p id="notice"><%= notice %></p>

<h1>Commandes</h1>

<table class="table table-bordered table-striped">
  <thead class="table-dark">
    <tr>
      <th>Numéro</th>
      <th>Client</th>
      <th>Réduction</th>
      <th>État Paiement</th>
      <th>État commande</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.id %></td>
        <td><%= order.user_id %></td>
        <td><%= order.discount %></td>
        <td><%= order.is_paid %></td>
        <td><%= order.is_ready %></td>
        <td><%= link_to 'Afficher', order %></td>
        <td><%= link_to 'Modifier', edit_order_path(order) %></td>
        <td><%= link_to 'Supprimer', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Crée commande', new_order_path, class:"btn btn-dark"  %>
