<%= form_with(model: order) do |form| %>
  <% if order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(order.errors.count, "error") %> prohibited this order from being saved:</h2>
      <ul>
        <% order.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="card">
    <ul class="list-group list-group-flush">
      <li class="list-group-item"><strong>Id:</strong> <%= form.text_field :id, class:"form-control" %></li>
      <li class="list-group-item"><strong>User ID:</strong> <%= form.text_field :user_id, class:"form-control" %></li>
      <li class="list-group-item"><strong>Discount:</strong> <%= form.number_field :discount, class:"form-control" %></li>
      <li class="list-group-item"><strong>Livraison:</strong> <%= form.select :shipping, @lst_shipping, {}, class:"form-select" %></li>
      <li class="list-group-item"><strong>Suivi:</strong> <%= form.text_field :tracking, class:"form-control" %></li>
      <li class="list-group-item"><strong>Commentaire Boutique:</strong> <%= form.text_area :comment_shop, class:"form-control" %></li>
      <li class="list-group-item"><strong>Type de paiement:</strong>  <%= form.select :payment, @lst_payment, {}, class:"form-select" %></li>
      <li class="list-group-item"><strong>Etat paiement:</strong> <%= form.select :is_paid, @lst_is_paid, {}, class:"form-select" %></li>
      <li class="list-group-item"><strong>Etat commande:</strong> <%= form.select :is_ready, @lst_is_ready, {}, class:"form-select" %></li>
    </ul>
    <div class="card-body">
      <div class="actions">
        <%= form.submit "Valider ✔️", class:"btn btn-dark"  %>
      </div>
    </div>
  </div>
<% end %>
