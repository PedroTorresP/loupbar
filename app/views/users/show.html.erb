<%= render 'navtab' %>
<div class="card">
  <ul class="list-group list-group-flush">
    <li class="list-group-item"><strong>Id:</strong> <%= @user.id %></li>
    <li class="list-group-item"><strong>Email:</strong> <%= @user.email %></li>
    <li class="list-group-item"><strong>Nom:</strong> <%= @user.first_name %></li>
    <li class="list-group-item"><strong>Pr√©nom:</strong> <%= @user.last_name %></li>
    <li class="list-group-item"><strong>Code postal:</strong> <%= @user.postal_code %></li>
    <li class="list-group-item"><strong>Adresse:</strong> <%= @user.address %></li>
    <li class="list-group-item"><strong>Administrateur:</strong>
      <% if @user.is_admin %>
        Oui
      <% else %>
        Non
      <% end %>
    </li>
  </ul>
  <div class="card-body">
    <%= link_to 'Modifier', edit_user_path(@user), class:"btn btn-dark" %>
    <%= link_to 'Retour', users_path, class:"btn btn-dark" %>
  </div>
</div>
