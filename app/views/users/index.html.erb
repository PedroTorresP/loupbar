<%= render 'navtab' %>
<p id="notice"><%= notice %></p>
<h1>Utilisateurs</h1>
<div class="card">
  <div class="card-body">
    <%= form_with url: users_path, method: :get do |form| %>
      <%= form.text_field :user_id, placeholder:"Chercher par numéro" %>
      <%= form.text_field :user_name, placeholder:"Chercher par nom" %>
      <%= form.text_field :user_mail, placeholder:"Chercher par mail" %>
      <%= form.submit "Filtrer", class:"btn btn-primary" %>
    <% end %>
  </div>
</div>
<table class="table table-bordered table-striped">
  <thead class="table-dark">
    <tr>
      <th>Id</th>
      <th>Email</th>
      <th>Nom</th>
      <th>Prénom</th>
      <th>Téléphone</th>
      <th>Ville</th>
      <th>Code postal</th>
      <th>Adresse</th>
      <th>Administrateur</th>
      <th>IP</th>
      <th colspan="5"></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.email %></td>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.phone %></td>
        <td><%= user.city %></td>
        <td><%= user.postal_code %></td>
        <td><%= user.address %></td>
        <td>
          <% if user.is_admin %>
            Oui
          <% else %>
            Non
          <% end %>
        </td>
        <td><%= user.ip %>
        <% if Blacklist.find_by_ip(request.remote_ip).present? %>
        (🚫)
        <% end %>
        </td>
        <td><%= link_to '🛒', orders_path(:order => {:user_id => user.id}), method: :post, data: { confirm: 'Voulez vous créée une commande ?' } %></td>
        <td><%= link_to '🔎', user %></td>
        <td><%= link_to '✏️', edit_user_path(user) %></td>
        <td><%= link_to '🗑️', user, method: :delete, data: { confirm: 'Êtes-vous certain ? Suppression du client 🚫' } %></td>
        <td><%= link_to '🚫BAN', blacklists_path(:blacklist => {:ip => user.ip}), method: :post, data: { confirm: '🚫🚫🚫ATTENTION🚫🚫🚫 LE USER VA DEFINITIVEMENT ETRE BANNI ET NE POURRA PLUS ACCEDER AU SITE!!! ETES VOUS CERTAINS ??? 🚫🚫🚫 (Vous pouvez manuellement retirer les IP bannies dans la liste noire' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @users %>

<br>
<%= link_to 'Crée utilisateur', new_user_path, class:"btn btn-dark"  %>
<%= link_to 'Accéder à la liste noire', blacklists_path, class:"btn btn-dark"  %>
