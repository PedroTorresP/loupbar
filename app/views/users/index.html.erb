<p id="notice"><%= notice %></p>

<h1>Utilisateurs</h1>

<table class="table table-bordered table-striped">
  <thead class="table-dark">
    <tr>
      <th>Id</th>
      <th>Pseudo</th>
      <th>Mot de passe</th>
      <th>Email</th>
      <th>Nom</th>
      <th>Prénom</th>
      <th>Code postal</th>
      <th>Addresse</th>
      <th>Administrateur</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.username %></td>
        <td><%= user.password %></td>
        <td><%= user.email %></td>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.postal_code %></td>
        <td><%= user.address %></td>
        <td><%= user.is_admin %></td>
        <td><%= link_to 'Afficher', user %></td>
        <td><%= link_to 'Modifier', edit_user_path(user) %></td>
        <td><%= link_to 'Supprimer', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Crée utilisateur', new_user_path, class:"btn btn-dark"  %>
