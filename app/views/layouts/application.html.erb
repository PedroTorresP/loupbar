<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">
    <title>Leloupbar</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag asset_path('favicon.ico') %>
  </head>
  <body style="background-image: url(<%= url_for(get_image('background')) %>)">
    <div class="header">
      <%= render 'home/header' %>
    </div>
    <div class="container">
      <br>
      <% if notice %>
        <%= render 'layouts/alert' %>
      <% end %>
      <% if get_value('away').length > 3 && user_signed_in? && User.all.find(current_user.id).is_admin %>
        <%= form_with(model: Customisation.all.find(18), :as => :put, :url => customisation_path(18)) do |form| %>
          <%= form.hidden_field :value, :value => 'a' %>
          <%= form.submit "Mettre fin Ã  l'absence", class:"btn-lg btn-danger" %>
        <%end%>
      <% end %>
            <% if get_value('maintenance').length > 3 && user_signed_in? && User.all.find(current_user.id).is_admin %>
        <%= form_with(model: Customisation.all.find(19), :as => :put, :url => customisation_path(19)) do |form| %>
          <%= form.hidden_field :value, :value => 'a' %>
            <%= form.submit "Rendre le site disponible", class:"btn-lg btn-danger" %>
        <%end%>
      <% end %>
      <% if get_value('maintenance').length > 3 && (['users', 'products', 'events', 'orders', 'categories', 'subcategories', 'customisations', 'sessions', 'registrations', 'compte']).exclude?(controller_name) %>
        <h1> <%= get_value('maintenance') %> </h1>
      <% else %>
        <%= yield %>
      <% end %>
    </div>
    <div class="footer">
      <%= render 'home/footer' %>
    </div>
    <!-- Optional JavaScript; choose one of the two! -->
    <!-- Option 1: Bootstrap Bundle with Popper 
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj" crossorigin="anonymous"></script>
    -->
    <!-- Option 2: Separate Popper and Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js" integrity="sha384-eMNCOe7tC1doHpGoWe/6oMVemdAVTMs2xqW4mwXrXsW0L84Iytr2wi5v2QjrP/xp" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.min.js" integrity="sha384-cn7l7gDp0eyniUwwAZgrzD06kc/tftFf19TOAs2zVinnD/C7E91j9yyk5//jjpt/" crossorigin="anonymous"></script>
  </body>
</html>
