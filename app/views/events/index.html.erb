<p id="notice"><%= notice %></p>

<h1>Évènements</h1>

<table class="table table-bordered table-striped">
  <thead class="table-dark">
    <tr>
      <th>Id</th>
      <th>Nom</th>
      <th>Date</th>
      <th>Description</th>
      <th>Image</th>
      <th>Prix</th>
      <th>Places</th>
      <th>Résultat</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.id %></td>
        <td><%= event.name %></td>
        <td<%= event.date %></td>
        <td><%= event.description %></td>
        <td><%= event.image %></td>
        <td><%= event.price %></td>
        <td><%= event.places %></td>
        <td><%= event.result %></td>
        <td><%= link_to 'Afficher', event %></td>
        <td><%= link_to 'Modifier', edit_event_path(event) %></td>
        <td><%= link_to 'Supprimer', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Crée évènement', new_event_path, class:"btn btn-dark"  %>
