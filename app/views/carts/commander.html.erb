<h1> Commander </h1>
<div class="row">
  <div class="column">
    <div class="card">
      <div class="card-header">
        Addresse de livraison
      </div>
      <div class="card-body">
        <%= @user.first_name + " " + @user.last_name%><br>
        <%= @user.address%><br>
        <%= @user.postal_code%><br>
        Suisse<br>
        <%= link_to "Modifier", edit_user_registration_path, class:"btn btn-primary" %>
      </div>
    </div>
    <div class="card">
      <div class="card-header">
        Choix de livraison
      </div>
      <div class="card-body">
        <div class="form-check">
          <input class="form-check-input" type="radio" name="livraison" id="flexRadioDefault2" checked>
          <label class="form-check-label" for="flexRadioDefault2">
            Retrait au magasin (0 CHF)
          </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="livraison" id="flexRadioDefault1" >
          <label class="form-check-label" for="flexRadioDefault1">
            Par la poste (7 CHF)
          </label>
        </div>
      </div>
    </div>
  </div>
  <div class="column">
    <div class="card">
      <div class="card-header">
        Paiement
      </div>
      <div class="card-body">
        <div class="form-check">
          <input class="form-check-input" type="radio" name="paiement" id="flexRadioDefault3" checked>
          <label class="form-check-label" for="flexRadioDefault3">
            Au magasin
          </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="paiement" id="flexRadioDefault2" >
          <label class="form-check-label" for="flexRadioDefault2">
            Twint
          </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="paiement" id="flexRadioDefault1" >
          <label class="form-check-label" for="flexRadioDefault1">
            Carte de crédit / Paypal
          </label>
        </div>
      </div>
    </div>
    <div class="card">
      <div class="card-header">
        Récap
      </div>
      <div class="card-body">
        Total articles : <%= sub_total(@cart) %> CHF <br>
        Livraison : ... CHF <br>
        Total de la commande : <%= sub_total(@cart) %> <br><br>
        <%= form_with(model: @order, :as => :post, :url => carts_path) do |form| %>
          <%= form.hidden_field :shipping %>
          <%= form.hidden_field :payment %>
          <%= form.submit "Confirmer", class:"btn btn-primary" %>
        <% end %>
        <%= link_to "Retour", carts_show_path, class:"btn btn-warning" %>
      </div>
    </div>
  </div>
</div>
