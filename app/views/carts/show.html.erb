<div class="card">
  <div class="card-body">
    <h2>Panier</h2>
    <table class="table table-bordered table-striped">
      <thead class="table-warning">
        <tr >
          <th>Nom</th>
          <th>Prix</th>
          <th>Quantit√©</th>
          <th colspan="1"></th>
        </tr>
      </thead>
      <tbody>
        <% @cart.line_items.each do |line_item| %>
          <tr class="table-warning">
            <td><%= line_item.product.name %></td>
            <td><%= line_item.product.price %></td>
            <td><%= line_item.quantity %></td>
            <td> <%= link_to "üóëÔ∏è", line_item_path(line_item), method: :delete %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <h3>Total du panier: <%= sub_total(@cart) %> CHF</h3>
    <br>
    <% if user_signed_in? %>
      <%= link_to "Confirmer et acheter", carts_commander_path, class:"btn btn-primary" %>
    <% else %>
      <%= link_to "Veuillez vous connecter pour acheter", new_user_session_path, class:"btn btn-primary" %>
    <% end %>
    <%= link_to "Vider le panier", cart_path(@cart.id),method: :delete, data: {confirm: "√ätes vous certain de vouloir vider le panier?"}, class:"btn btn-danger" %>
  </div>
</div>
