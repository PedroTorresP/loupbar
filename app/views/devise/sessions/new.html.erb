<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="card text-dark bg-light mb-3 login-card">
    <div class="card-header">
      <h2>Connexion</h2>
    </div>
    <div class="card-body">
      <div class="field form-group">
        <%= f.email_field :email, class:"form-control", autofocus: true, autocomplete: "email", placeholder:"Email" %>
      </div>
    <br>
    <div class="field form-group">
      <%= f.password_field :password, class:"form-control", autocomplete: "current-password", placeholder:"Mot de passe" %>
    </div>
    <% if devise_mapping.rememberable? %>
      <div class="field form-group">
        <%= f.check_box :remember_me %>
        <%= f.label 'Se souvenir de moi', class:"form-label" %>
      </div>
    <% end %>
    <div class="actions">
      <%= f.submit "Connexion", class:"btn btn-dark" %>
    </div>
    <%= render "devise/shared/links" %>
  </div>
</div
<% end %>
