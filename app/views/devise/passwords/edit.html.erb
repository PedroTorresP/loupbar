<div class="card">
  <div class="card-header">
    <h2>Changer votre mot de passe</h2>
  </div>
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>
      <%= f.password_field :password, autofocus: true, placeholder: "Nouveau mot de passe", autocomplete: "new-password", class:"form-control" %>
    </div>
    <div class="field">
      <%= f.password_field :password_confirmation, placeholder: "Confirmer le mot de passe", autocomplete: "new-password", class:"form-control" %>
    </div>
    <div class="actions">
      <%= f.submit "Changer mon mot de passe", class:"btn btn-dark" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
</div>
