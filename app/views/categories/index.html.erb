<p id="notice"><%= notice %></p>

<h1>Catégories</h1>

<table class="table table-bordered table-striped">
  <thead class="table-dark">
    <tr>
      <th>Id</th>
      <th>Nom</th>
      <th>Affiché?</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.id %></td>
        <td><%= category.name %></td>
        <td><%= category.available %></td>
        <td><%= link_to 'Afficher', category %></td>
        <td><%= link_to 'Modifier', edit_category_path(category) %></td>
        <td><%= link_to 'Supprimer', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Crée catégorie', new_category_path, class:"btn btn-dark" %>
