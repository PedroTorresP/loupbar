<div class="card">
<header class="card-header"><%= @event.name %></header>
<div class="card-body">
<div class="columns">
<div class="column">
<div class="boutique-img">
<% if @event.image.attached? %>
<%= image_tag @event.image, alt:"noimage", class:"boutique-img" %>
<% else %>
<%= image_tag "noimage.png", class:"boutique-img" %>
<% end %>
</div>

</div>
<div class="column">
<div class="field">
<label class="label">Prix</label><br>
<%= @event.price %> CHF<br>
</div>
<div class="field">
<label class="label">Date</label><br>
<%= @event.date %> <br>
</div>
<div class="field">
<label class="label">Places</label><br>
<%= @event.places %><br>
</div>
<label class="label">Places restantes</label><br>
<%= @placeRestantes %><br>
</div>
<% if @participe %>
INSCRIT
<% else %>
<%= form_with(model: @participant, :as => :post, :url => participants_path) do |form| %>
    <%= form.hidden_field :user_id %>
    <%= form.hidden_field :event_id %>
    <%= form.submit "S'inscrire", class:"btn btn-primary" %>
<% end %>
<% end %>
</div>
</div>
</div>
<div class="card-body">
<h3 class"card-title> DESCRIPTION </h3>
<%= @event.description %>
</div>
</div>