
<h1>Produits</h1>

<table class="table table-bordered table-striped">
  <thead class="table-dark">
    <tr>
      <th>Id</th>
      <th>Nom</th>
      <th>Catégorie</th>
      <th>Prix</th>
      <th>Quantité</th>
      <th>Stock Minimun</th>
      <th>Commandable</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.id %></td>
        <td><%= product.name %></td>
        <td><%= product.category.name %></td>
        <td><%= product.price %></td>
        <td><%= product.quantity %></td>
        <td><%= product.min_stock %></td>
        <td><% if product.available %>
        Disponible
        <% else %>
        Pas disponible
        <% end %></td>
        <td><%= link_to 'Afficher', product %></td>
        <td><%= link_to 'Modifier', edit_product_path(product) %></td>
        <td><%= link_to 'Supprimer', product, method: :delete, data: { confirm: 'Êtes vous certain de vouloir le supprimer ?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Crée produit', new_product_path, class:"btn btn-dark" %>
