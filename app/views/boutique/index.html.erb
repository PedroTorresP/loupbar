<div class="row row-cols-3">
    <% @products.each do |p| %>
    <div class="col">
        <div class="card">
            <h5 class="card-title"><%= p.name %></h5>
            <div class="card-body">
            <% if p.image.attached? %>
            <%= image_tag p.image %>
          <% end %>
            <p class="card-text"><%= p.category.name %> CHF</p>        
            <p class="card-text">PRIX : <%= p.price %> CHF</p>
                    <a href="#" class="btn btn-primary">Ajouter au panier</a>
                </div>
        </div>
    </div>
    <% end %>
</div>

