<div class="row row-cols-4">
    <% @products.each do |p| %>

        
    <div class="col">
        <div class="card card-boutique">
            <h5 class="card-title"><%= p.name %></h5>
            <div class="card-body">
            <div class="boutique-img">
            <% if p.image.attached? %>
            <%= image_tag p.image %>
          <% end %>
            </div>
            <p class="card-text"><%= p.category.name %> CHF</p>        
            <p class="card-text">PRIX : <%= p.price %> CHF</p>
            <input class="input-boutique" type="number" value=1 ></input><a href="#" class="btn btn-primary">Ajouter au panier</a>
                </div>
        </div>
    </div>
    <% end %>
</div>

