<div class="card">
  <div class="card-body">
    <%= form_with url: boutique_index_path, method: :get do |form| %>
      <%= form.label :tri, "Trier:", class:"form-label" %>
      <%= form.select :tri, options_for_select(["Date décroissant", "Date croissant", "Prix décroissant", "Prix croissant"]), class:"form-select" %>
      <%= form.text_field :query, placeholder:"Chercher par nom" %>
      <%= form.submit "Filtrer" , class:"btn btn-primary" %>
    <% end %>
  </div>
</div>
<div class="row row-cols-auto" style="background-color: <%= get_value('row_color')%>;">
  <% @products.each do |p| %>
    <div class="column">
      <div class="card card-boutique">
        <h5 class="card-title"><%= p.name %></h5>
        <div class="card-body">
          <div class="boutique-img">
            <% if p.image.attached? %>
              <%= link_to image_tag(p.image, class:"boutique-img"), boutique_produit_path + "?id=" + p.id.to_s %>
            <% else %>
              <%= link_to image_tag("noimage.png", class:"boutique-img"), boutique_produit_path + "?id=" + p.id.to_s %>
            <% end %>
          </div>
          <p class="card-text"><%= p.category.name %> </p>
          <p class="card-text">PRIX : <%= p.price %> CHF</p>
          <% if current_user != nil %>
            <% if is_wished(p.id) != nil %>
              <%= button_to "❤️", wishlist_path(:id => is_wished(p.id).id), :method => :delete , class:"btn btn-danger" %>
            <% else %>
              <%= form_with(model: @wishlist, :as => :post, :url => wishlists_path) do |form| %>
                <%= form.hidden_field :product_id, :value => p.id %>
                <%= form.submit "❤️", class:"btn btn-success" %>
              <% end %>
            <% end %>
          <% end %>
          <%= form_with(model: @line_item, :as => :post, :url => line_items_path) do |form| %>
            <% if p.quantity > 0%>
              <%= form.select :quantity, options_for_select(1..product_quantity_cart(session_cart, p.id)), class:"form-select" %>
            <% else %>
              <%= form.select :quantity, options_for_select(1..100), class:"form-select" %>
            <% end %>
            <%= form.hidden_field :product_id, :value => p.id %>
            <% if p.date > Date.today %>
              <%= form.submit "Précommander", class:"btn btn-warning" %>
            <% elsif p.quantity > 0 %>
              <%= form.submit "Ajouter au panier", class:"btn btn-primary" %>
            <% elsif p.available %>
              <%= form.submit "Sur commande", class:"btn btn-warning" %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
